    <EmbeddedResource Remove="Exceptions\**" />
    <EmbeddedResource Remove="Interfaces\**" />
    <EmbeddedResource Remove="Isolation\**" />
    <EmbeddedResource Remove="Utils\**" />
    <None Remove="CommandLineArgumentHandling\**" />
    <None Remove="Exceptions\**" />
    <None Remove="Interfaces\**" />
    <None Remove="Isolation\**" />
    <None Remove="Utils\**" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="ApplicationBase.cs" />
    <Compile Remove="ApplicationDescription.cs" />
    <Compile Remove="ApplicationManager.cs" />
    <Compile Remove="Attributes\PluginDependencyAttribute.cs" />
    <Compile Remove="Attributes\PluginFileAttribute.cs" />
    <Compile Remove="LightweightApplicationManager.cs" />
    <Compile Remove="PluginBase.cs" />
    <Compile Remove="PluginDescription.cs" />
    <Compile Remove="PluginFile.cs" />
    <Compile Remove="PluginState.cs" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="..\..\LICENSE.txt" Link="LICENSE.txt" />
  </ItemGroup>

</Project>
